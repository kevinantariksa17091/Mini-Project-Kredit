@inherits LayoutComponentBase
@rendermode InteractiveServer
@inject NavigationManager Nav
@inject Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage.ProtectedSessionStorage SessionStore

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Pengajuan Kredit</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        
        @* Menu yang selalu tampil *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @* Menu yang hanya tampil jika User SUDAH Login *@
        @if (_isLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="dashboard">
                    <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="villages">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Edit Profile
                </NavLink>
            </div>

            <div class="nav-item px-3">
                @* Menggunakan @onclick.prevent agar tidak dianggap navigasi link biasa *@
                <NavLink class="nav-link" @onclick="Logout" style="cursor:pointer">
                    <span class="bi bi-box-arrow-left-nav-menu" aria-hidden="true"></span> LogOut
                </NavLink>
            </div>
        }
        else
        {
            @* Jika belum login, tampilkan menu Login *@
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        }

    </nav>
</div>

@code {
    private bool _isLoggedIn = false;

    // Cek status login saat menu dimuat
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Pastikan key ini SAMA dengan yang disimpan di Login ("username")
                var result = await SessionStore.GetAsync<string>("username");
                if (result.Success && !string.IsNullOrEmpty(result.Value))
                {
                    _isLoggedIn = true;
                    StateHasChanged(); // Refresh tampilan menu
                }
            }
            catch
            {
                // Abaikan jika error saat prerendering
            }
        }
    }

    private async Task Logout()
    {
        try
        {
            // 1. Hapus session. Ganti "username" sesuai apa yang Anda simpan saat Login.
            // Jika saat login menyimpan "token", ganti jadi "token".
            await SessionStore.DeleteAsync("username");
            
            // Opsional: Hapus key lain jika ada
            // await SessionStore.DeleteAsync("role");
        }
        catch
        {
            // Error handling jika storage gagal diakses (jarang terjadi)
        }

        // 2. Set status lokal ke false
        _isLoggedIn = false;

        // 3. Redirect ke halaman login dengan forceLoad: true
        // forceLoad penting untuk membersihkan state aplikasi di memori browser
        Nav.NavigateTo("/login", forceLoad: true);
    }
}