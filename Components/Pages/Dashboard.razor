@page "/dashboard"
@rendermode InteractiveServer
@using Mini_Project_Kredit.Models
@inject NavigationManager Nav
@inject Mini_Project_Kredit.Services.CreditRegistrationService CreditRegistrationService
@inject Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage.ProtectedSessionStorage SessionStore

<PageTitle>Dashboard</PageTitle>

@* Cek apakah loading atau belum terautentikasi *@
@if (_isLoading)
{
    <div class="alert alert-info">Memeriksa status login...</div>
}
else if (_isAuthenticated)
{
    
    @if (_currentUserRegistration != null && !string.IsNullOrEmpty(_currentUserRegistration.ProfileImagePath))
    {
        <div class="mb-3 text-center">
            <img src="@_currentUserRegistration.ProfileImagePath" alt="Foto Profil Saya"
                style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%; border: 3px solid #007bff;" />
            <h5>Hello, @(_username ?? "User")</h5>
        </div>
    
    }
    else if (_currentUserRegistration != null)
    {
        <div class="alert alert-warning small">Anda belum mengunggah foto profil. Silakan <a href="/edit-registration">Edit Data
                Registrasi</a>.</div>
    }

    <h3>Data Credit Registrations</h3>

    @if (_rows is null || _rows.Count == 0)
    {
        <p>Belum ada data.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Registration Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in _rows)
                {
                    <tr>
                        <td>@r.username</td>
                        <td>@r.FullName</td>
                        <td>@r.PhoneNumber</td>
                        <td>@r.Address</td>
                        <td>@r.RegistrationDate</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <hr />
    <h3>Edit Data Registrasi</h3>
    <button class="btn btn-success mb-3" @onclick="GoToEdit">Edit Data Registrasi</button>
}
else
{
    @* Opsi: Tampilkan pesan akses ditolak jika redirect belum terjadi *@
    <p>Access Denied. Redirecting to login...</p>
}

@code {
    private List<CreditRegistration>? _rows;
    private CreditRegistration? _currentUserRegistration;
    private bool _isLoading = true;
    private bool _isAuthenticated = false;
    private string? _username;


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var result = await SessionStore.GetAsync<string>("username");

                if (result.Success && !string.IsNullOrEmpty(result.Value))
                {
                    // User Login: Simpan username dan load data
                    _username = result.Value;
                    _isAuthenticated = true;

                    // Load data di sini agar tidak membebani server jika user belum login
                    _rows = await CreditRegistrationService.GetAllAsync();
                    _currentUserRegistration = await CreditRegistrationService.GetByUsernameAsync(_username);
                }
                else
                {
                    // User Belum Login: Redirect
                    _isAuthenticated = false;
                    Nav.NavigateTo("/login", forceLoad: true);
                }
            }
            catch
            {
                // Error handling jika storage bermasalah
                Nav.NavigateTo("/login");
            }
            finally
            {
                _isLoading = false;
                StateHasChanged(); // Wajib panggil ini untuk update UI setelah render selesai
            }
        }
    }

    private void GoToEdit()
    {
        // Tidak perlu cek async session lagi karena sudah dicek di awal
        Nav.NavigateTo("/edit-registration");
    }
}