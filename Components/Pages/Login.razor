@page "/login"
@rendermode InteractiveServer
@layout Mini_Project_Kredit.Components.Layout.EmptyLayout
@inject Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage.ProtectedSessionStorage SessionStore
@inject Mini_Project_Kredit.Services.AuthService Auth
@inject NavigationManager Nav
@using Mini_Project_Kredit.Services
@inject Mini_Project_Kredit.Services.CustomAuthStateProvider AuthStateProvider


<div class="login-container">
    <div class="login-box">
        <h3>Login</h3>

        @if (!string.IsNullOrEmpty(error))
        {
            <div class="error-msg">@error</div>
        }

        <div class="form-group">
            <input placeholder="Username" @bind="username" />
        </div>

        <div class="form-group">
            <input placeholder="Password" type="password" @bind="password" />
        </div>

        <button class="btn-login" @onclick="DoLogin">Masuk</button>
        <br>
        
        <p class="mt-3">Belum punya akun? Register sekarang! <a href="/register">Register here</a></p>

    </div>
    
        
    
</div>
@code {
    private string username = "";
    private string password = "";
    private string? error;

    private void GoToRegister()
    {
        Nav.NavigateTo("/register");
    }

    private async Task DoLogin()
    {
        var result = await Auth.Login(username, password);

        if (result == null)
        {
            error = "Server tidak merespon.";
            return;
        }

        if (result.status == 1)
        {
            await SessionStore.SetAsync("token", result.token);
            await AuthStateProvider.RefreshAsync();
            Nav.NavigateTo("/dashboard", true);
        }
        else
        {
            error = result.pesan;
        }
    }
}