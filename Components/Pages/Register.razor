@page "/register"
@rendermode InteractiveServer
@using Mini_Project_Kredit.Models
@inject NavigationManager Nav
@inject Mini_Project_Kredit.Services.CreditRegistrationService CreditRegistrationService
@inject Mini_Project_Kredit.Services.VillageService VillageService


<PageTitle>Register</PageTitle>

<div class="register-container">
    <div class="register-box">
        <h3>Registrasi Kredit</h3>

        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="@MessageCss">@Message</div>
        }

        <EditForm Model="@Model" OnValidSubmit="@HandleRegister">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label>NIK</label>
                <InputText class="form-control" @bind-Value="Model.Nik" placeholder="16 digit NIK" />
                <ValidationMessage For="@(() => Model.Nik)" />
            </div>

            <div class="form-group">
                <label>Nama Lengkap</label>
                <InputText class="form-control" @bind-Value="Model.FullName" placeholder="Nama lengkap" />
                <ValidationMessage For="@(() => Model.FullName)" />
            </div>

            <div class="form-group">
                <label>Alamat</label>
                <InputText class="form-control" @bind-Value="Model.Address" placeholder="Alamat" />
                <ValidationMessage For="@(() => Model.Address)" />
            </div>

            <div class="form-group">
                <label>No. Telepon</label>
                <InputText class="form-control" @bind-Value="Model.PhoneNumber" placeholder="8-13 digit" />
                <ValidationMessage For="@(() => Model.PhoneNumber)" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <InputText class="form-control" @bind-Value="Model.Email" placeholder="Email" />
                <ValidationMessage For="@(() => Model.Email)" />
            </div>

            <div class="form-group">
                <label>Username</label>
                <InputText class="form-control" @bind-Value="Model.username" placeholder="Username" />
                @if (!string.IsNullOrWhiteSpace(UsernameError))
                {
                    <div class="text-danger">@UsernameError</div>
                }
            </div>

            <div class="form-group">
                <label>Password</label>
                <InputText class="form-control" @bind-Value="Model.Password" type="password"
                    placeholder="Min 6 char, ada huruf kapital, angka, spesial" />
                <ValidationMessage For="@(() => Model.Password)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Cari Desa</label>

                <InputText class="form-control" Value="@_searchText" ValueChanged="OnSearchChanged"
                    ValueExpression="(()=> _searchText)" />
            </div>

            <div class="text-muted small">
                Keyword: @_searchText | Hasil: @districts.Count | Trigger: @_triggerCount
            </div>


            <div class="mb-3">
                <label class="form-label">Pilih Desa</label>
                <select class="form-select" @bind="Model.VillageId" @bind:after="OnVillageChanged">
                    <option value="">-- pilih desa --</option>
                    @foreach (var d in districts)
                    {
                        <option value="@d.id">@d.DisplayName</option>
                    }
                </select>
            </div>

            <!-- RegistrationDate otomatis (tidak perlu input) -->
            <div class="small text-muted mt-2">
                Tanggal Registrasi: @Model.RegistrationDate.ToString("yyyy-MM-dd HH:mm:ss")
            </div>

            <button class="btn btn-primary mt-3 w-100" type="submit" disabled="@IsSubmitting">
                @(IsSubmitting ? "Mendaftarkan..." : "Register")
            </button>

            <p class="mt-3">Sudah punya akun? <a href="/login">Login</a></p>
        </EditForm>
    </div>
</div>

@code {
    private CreditRegistration Model = new();
    private bool IsSubmitting = false;

    private string? Message;
    private string MessageCss = "alert alert-info";
    private string? UsernameError;
    private string? VillageError;

    //var result = await CreditRegistrationService.RegisterAsync(Model);
    //Message = result.Message;
    private List<DesaApiRow> districts = new();
    private int _triggerCount = 0;
    private string _searchText = "";

    private async Task OnSearchChanged(string value)
    {
        _triggerCount++;
        _searchText = value ?? "";

        Console.WriteLine($"[Register] Trigger={_triggerCount}, keyword={_searchText}");

        if (_searchText.Length < 3)
        {
            districts.Clear();
            await InvokeAsync(StateHasChanged);
            return;
        }

        try
        {
            districts = await VillageService.SearchVillageAsync(_searchText.ToUpperInvariant());
            Console.WriteLine($"[Register] districts.Count={districts.Count}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Register] ERROR: {ex}");
            districts.Clear();
        }

        await InvokeAsync(StateHasChanged);
    }


    private async Task OnSearchInput(ChangeEventArgs e)
    {
        _triggerCount++;
        _searchText = e.Value?.ToString() ?? "";

        // DEBUG: bukti method kepanggil
        Console.WriteLine($"[Register] OnSearchInput trigger={_triggerCount}, keyword={_searchText}");

        if (_searchText.Length < 3)
        {
            districts.Clear();
            await InvokeAsync(StateHasChanged);
            return;
        }

        try
        {
            var keyword = _searchText.ToUpperInvariant();
            districts = await VillageService.SearchVillageAsync(keyword);
            Console.WriteLine($"[Register] districts.Count={districts.Count}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Register] ERROR: {ex}");
            districts.Clear();
        }

        await InvokeAsync(StateHasChanged);
    }

    private void OnVillageChanged()
    {
        var selected = districts.FirstOrDefault(x => x.id == Model.VillageId);

        if (selected != null)
        {
            Model.VillageName = selected.desa;
            Model.DistrictName = selected.kecamatan;
            Model.RegencyName = selected.kabupaten;
        }
        else
        {
            Model.VillageName = null;
            Model.DistrictName = null;
            Model.RegencyName = null;
        }
    }

    private async Task SearchDesa()
    {
        VillageError = null;

        if (string.IsNullOrWhiteSpace(_searchText) || _searchText.Length < 3)
        {
            districts.Clear();
            await InvokeAsync(StateHasChanged);
            return;
        }

        try
        {
            var keyword = _searchText.ToUpperInvariant(); // banyak API case-sensitive
            districts = await VillageService.SearchVillageAsync(keyword);
        }
        catch (Exception ex)
        {
            districts.Clear();
            VillageError = ex.Message; // untuk debug awal
        }

        await InvokeAsync(StateHasChanged);
    }

    protected override void OnInitialized()
    {
        Model.RegistrationDate = DateTime.Now;
    }

    private async Task HandleRegister()
    {
        UsernameError = null;
        Message = null;

        if (string.IsNullOrWhiteSpace(Model.username))
        {
            UsernameError = "Username wajib diisi.";
            return;
        }

        try
        {
            IsSubmitting = true;

            Model.RegistrationDate = DateTime.Now;

            // Panggil service untuk simpan data (sesuaikan nama method di servicemu)
            // Misal: await CreditRegistrationService.RegisterAsync(Model);
            var result = await CreditRegistrationService.RegisterAsync(Model);

            if (result.Success)
            {
                MessageCss = "alert alert-success";
                Message = result.Message;
                // optional redirect
                // Nav.NavigateTo("/login");
            }
            else
            {
                MessageCss = "alert alert-danger";
                Message = result.Message;
            }

        }
        catch (Exception ex)
        {
            MessageCss = "alert alert-danger";
            Message = $"Terjadi error: {ex.Message}";
        }
        finally
        {
            IsSubmitting = false;
        }
    }

}